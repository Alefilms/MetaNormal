function room_RepExec()
{
if (GetLocationType(mouse.x,mouse.y) == eLocationHotspot && Game.GetLocationName(mouse.x, mouse.y) == "Archivo" )
 {
    mouse.Mode = eModeInteract;
    EstaDentroDeSalida = true;
   mouse.UseModeGraphic(eModeFechaIzq);
   }
  else if( EstaDentroDeSalida == true)
  {
   EstaDentroDeSalida = false;
   mouse.UseDefaultGraphic();
  }
if (GetLocationType(mouse.x,mouse.y) == eLocationHotspot && Game.GetLocationName(mouse.x, mouse.y) == "Oficina" )
 {
    mouse.Mode = eModeInteract;
    EstaDentroDeSalida = true;
   mouse.UseModeGraphic(eModeFlechaArr);
   }
   
if ( Canales == 1) 
    {

     if (IsTimerExpired(1)) 
      {
          cTV.SayBackground("Compre Redusca Fibras-Facil");
        SetTimer(2,120);
      }
     if (IsTimerExpired(2))
  
      {
          cTV.SayBackground("Vera como baja de peso en cuestión de días");
        
          SetTimer(3, 120);
      }
        if (IsTimerExpired(3))
  
      {
        cTV.SayBackground("Todos los médicos lo recomiendan");
         
          SetTimer(4, 160);
      }
     if (IsTimerExpired(4))
  
      {
         cTV.SayBackground("Llame ya al número que aparece en pantalla");
          SetTimer(1, 160);
      }
    }
        
if ( Canales == 2) 
    {

     if (IsTimerExpired(5)) 
      {
          cTV.SpeechColor = 10;
          cTV.SayBackground("Es un lindo día para el perezoso salir y ver nuevos amigos");
         
        SetTimer(6,120);
      }
     if (IsTimerExpired(6))
  
      {
          cTV.SayBackground("Observamos ahora como está contemplando la naturaleza");
        
          SetTimer(7, 120);
      }
        if (IsTimerExpired(7))
  
      {
        cTV.SayBackground("¿Cual será su próximo movimiento?");
         
          SetTimer(8, 120);
      }
            if (IsTimerExpired(8))
  
      {
         cTV.SayBackground("Nos quedaremos en silencio para descubrirlo");
          
      }
    }



}

